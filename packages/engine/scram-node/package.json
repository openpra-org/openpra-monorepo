{
  "name": "scram-node",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./build/Release/scram-node.node",
  "types": "./targets/scram-node/lib/index.d.ts",
  "private": true,
  "scripts": {
    "postinstall": "cd build && ../scripts/inform_update_paths.sh",
    "install": "cmake-js -C --parallel 32 compile",
    "rebuild": "cmake-js -C --parallel 32 rebuild",
    "configure": "cmake-js -C --parallel 32 configure",
    "clean": "cmake-js clean",
    "test": "jest",
    "ctest": "cmake-js -C --parallel 32 compile && cd build && make test"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "production": [
        "!{projectRoot}/**/*.spec.ts"
      ]
    },
    "targets": {
      "install": {
        "dependsOn": [
          "build"
        ]
      },
      "build": {},
      "clean": {},
      "distclean": {},
      "build-deps": {},
      "tidy": {},
      "format": {},
      "coverage": {},
      "debug": {},
      "release": {},
      "sanitize": {},
      "test": {
        "inputs": [
          "default"
        ],
        "outputs": [],
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "dependencies": {
    "cmake-js": "7.3.0",
    "glob": "11.0.0",
    "node-addon-api": "8.1.0",
    "shared-types": "workspace:^",
    "tmp": "0.2.3"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "@types/glob": "8.1.0"
  },
  "binary": {
    "napi_versions": [
      9
    ]
  },
  "engines": {
    "node": "20.17.0"
  }
}
