{
  "name": "scram-node",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "main": "build/Release/scram-node.node",
  "private": true,
  "scripts": {
    "postinstall": "cd build && make -j32 install && ../scripts/inform_update_paths.sh",
    "preinstall": "export NUM_CORES=$(cross-env-shell scripts/get_cpus.sh)",
    "install": "cmake-js --parallel 32 compile",
    "rebuild": "cmake-js --parallel 32 rebuild",
    "configure": "cmake-js --parallel 32 configure",
    "clean": "cmake-js clean",
    "test": "jest",
    "ctest": "cmake-js --parallel 32 compile && cd build && make -j32 test"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "production": [
        "!{projectRoot}/**/*.spec.ts"
      ]
    },
    "targets": {
      "install": {
        "dependsOn": [
          "build"
        ]
      },
      "build": {},
      "clean": {},
      "distclean": {},
      "build-deps": {},
      "tidy": {},
      "format": {},
      "coverage": {},
      "debug": {},
      "release": {},
      "sanitize": {},
      "test": {
        "inputs": [
          "default",
          "^development"
        ],
        "outputs": [],
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "dependencies": {
    "cmake-js": "7.3.0",
    "glob": "11.0.0",
    "node-addon-api": "8.1.0",
    "tmp": "0.2.3"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "cross-env": "7.0.3",
    "jest": "29.7.0"
  },
  "binary": {
    "napi_versions": [
      9
    ]
  },
  "engines": {
    "node": "20.17.0"
  }
}
