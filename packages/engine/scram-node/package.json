{
  "name": "scram-node",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "main": "./lib/index.js",
  "private": true,
  "scripts": {
    "install": "cmake-js -C --parallel 32 compile --target scram-node ",
    "rebuild": "cmake-js -C --parallel 32 rebuild --debug --target scram-node ",
    "configure": "cmake-js -C --parallel 32 configure --target scram-node ",
    "clean": "cmake-js clean",
    "test": "jest",
    "ctest": "cmake-js -C --parallel 32 install -T test_mef"
  },
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "production": [
        "!{projectRoot}/**/*.spec.ts"
      ]
    },
    "targets": {
      "build": {},
      "clean": {},
      "distclean": {},
      "build-deps": {},
      "tidy": {},
      "format": {},
      "coverage": {},
      "debug": {},
      "release": {},
      "sanitize": {},
      "test": {
        "inputs": [
          "default",
          "^development"
        ],
        "outputs": [],
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "dependencies": {
    "cmake-js": "7.3.0",
    "node-addon-api": "8.1.0",
    "tmp": "0.2.3"
  },
  "devDependencies": {
    "jest": "29.7.0"
  },
  "binary": {
    "napi_versions": [9]
  },
  "engines": {
    "node": "20.17.0"
  }
}
