{
  "name": "frontend-primitives",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/frontend/primitives/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/packages/frontend/primitives",
        "index": "packages/frontend/primitives/src/index.html",
        "baseHref": "/",
        "main": "packages/frontend/primitives/src/main.tsx",
        "tsConfig": "packages/frontend/primitives/tsconfig.app.json",
        "assets": ["packages/frontend/primitives/src/favicon.ico", "packages/frontend/primitives/src/assets"],
        "styles": ["packages/frontend/primitives/src/styles.css"],
        "scripts": [],
        "webpackConfig": "packages/frontend/primitives/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "packages/frontend/primitives/src/environments/environment.ts",
              "with": "packages/frontend/primitives/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "frontend-primitives:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "frontend-primitives:build:development"
        },
        "production": {
          "buildTarget": "frontend-primitives:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "frontend-primitives:build",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/frontend/primitives/jest.config.ts"
      }
    }
  }
}
