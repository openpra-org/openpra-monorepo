{
  "extends": "./tsconfig.json",
  "types": ["@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    //"baseUrl": ".",
    //"outDir": "../dist/out-tsc",
    "types": [
      "jest",
      "cypress",
      "node",
    ]
  },
  "exclude": ["*.js"],
  "include": [
    "jest.config.ts",
    "playwright.config.ts",
    "e2e/**/*.e2e.*",
    "e2e/**/*.spec.*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
}
