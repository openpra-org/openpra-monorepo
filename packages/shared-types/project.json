{
  "name": "shared-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["scope:shared"],
  "sourceRoot": "packages/shared-types/src",
  "projectType": "library",
  "targets": {
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter shared-types run docs",
        "cwd": "{workspaceRoot}"
      },
      "outputs": ["{projectRoot}/docs"]
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared-types",
        "main": "packages/shared-types/src/index.ts",
        "tsConfig": "packages/shared-types/tsconfig.lib.json",
        "assets": ["packages/shared-types/*.md"],
        "transformers": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "eslintConfig": "packages/shared-types/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.js", "!{projectRoot}/**/*.d.ts"]
      }
    },
    "lint-canary": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter shared-types run lint:canary",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/shared-types/jest.config.ts"
      }
    }
  }
}
