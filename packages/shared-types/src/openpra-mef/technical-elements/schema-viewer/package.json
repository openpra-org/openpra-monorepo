{
  "name": "schema-viewer",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && node scripts/build.js",
    "serve": "npx http-server dist -o -c-1",
    "dev": "npm run build && npm run serve",
    "watch": "nodemon --watch ../../../**/*.ts --ext ts --exec 'npm run build'"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "typescript-json-schema": "^0.62.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.0.3"
  }
} 