{
  "name": "web-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["scope:server"],
  "sourceRoot": "packages/web-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/web-backend",
        "generatePackageJson": true,
        "main": "packages/web-backend/src/main.ts",
        "tsConfig": "packages/web-backend/tsconfig.app.json",
        "assets": ["packages/web-backend/src/assets"],
        "webpackConfig": "packages/web-backend/webpack.config.js",
        "transformers": [
          { "name": "typia/lib/transform" },
          {
            "name": "@nestia/core/lib/transform",
            "options": {
              "validate": "assert",
              "stringify": "assert"
            }
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-backend:build:development"
        },
        "production": {
          "buildTarget": "web-backend:build:production"
        }
      }
    },
    "deploy": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-backend:build",
        "watch": false,
        "inspect": false
      },
      "configurations": {
        "development": {
          "buildTarget": "web-backend:build:development"
        },
        "production": {
          "buildTarget": "web-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "eslintConfig": "packages/web-backend/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts"]
      }
    },
    "lint-canary": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter web-backend run lint:canary",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/web-backend/jest.config.ts"
      }
    },
    "test-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "MONGO_URI=\"mongodb://127.0.0.1:27017/test\" pnpm nx run web-backend:test --skip-nx-cache -- --test-timeout=60000",
        "cwd": "{workspaceRoot}"
      }
    },
    "e2e": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/web-backend/tests/jest-e2e.json",
        "passWithNoTests": false
      }
    },
    "e2e-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "MONGO_URI=\"mongodb://127.0.0.1:27017/test\" pnpm nx run web-backend:e2e --skip-nx-cache -- --test-timeout=60000",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
